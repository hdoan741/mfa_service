
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name),
             :html => {:class => "form-horizontal"}) do |f| %>
  <%= devise_error_messages! %>

  <legend>Sign up</legend>

  <div class="control-group">
    <%= f.label :name, class: "control-label", for: "inputName" %>
    <div class="controls">
      <%= f.text_field :name, id: "inputName" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :email, class: "control-label", for: "inputEmail" %>
    <div class="controls">
      <%= f.email_field :email, id: "inputEmail" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :password, class: "control-label", for: "inputPassword" %>
    <div class="controls">
      <%= f.password_field :password, id: "inputPassword" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :password_confirmation, class: "control-label", for: "inputPassConfirm" %>
    <div class="controls">
      <%= f.password_field :password_confirmation, id: "inputPassConfirm" %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <%= f.submit "Sign up", class: "btn-primary" %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
